TestMaterial {
  D3D11 {
    Vertex {
      File "../data/materials/testMaterialVertex.hlsl"
      EntryPoint "VS_MAIN"
      Profile "VS_5_0"
      ConstantBuffer {
        Value "$WorldViewProjectionMatrix" type="Matrix"
        Value "$WorldMatrix" type="Matrix"
        Value "$LightDir" type="Float4"
        Value "$AmbientColor" type="Float4"
        Value 1.0 type="Float1"
      }
    }

    Pixel {
      File "../data/materials/testMaterialPixel.hlsl"
      EntryPoint "PS_MAIN"
      Profile "PS_5_0"
    }

    Compute {
      File "../data/materials/testMaterialCompute.hlsl"
      EntryPoint "CS_MAIN"
      Profile "CS_5_0"
    }

    Geometry {
      File "../data/materials/testMaterialGeometry.hlsl"
      EntryPoint "GEOM_MAIN"
      Profile "GS_5_0"
    }

    Tesselation {
      File "../data/materials/testMaterialTess.hlsl"
      EntryPoint "TS_MAIN"
      Profile "TS_5_0"
    }
  }

  Vulkan {
    Vertex {
      File "../data/materials/testMaterialVertex.sprv"
      EntryPoint "VS_MAIN"
      Profile "VS"

      ConstantBuffer {
        Value "$WorldViewProjectionMatrix" type="Matrix"
        Value "$WorldMatrix" type="Matrix"
        Value "$LightDir" type="Float4"
        Value "$AmbientColor" type="Float4"
        Value 1.0 type="Float1"
      }
    }

    Pixel {
      File "../data/materials/testMaterialPixel.sprv"
      EntryPoint "PS_MAIN"
      Profile "FRAG"
    }
  }

}
